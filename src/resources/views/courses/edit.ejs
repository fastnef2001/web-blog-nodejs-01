

  <div class="mt-4 mb-4 container py-6 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-10">
        <div class="card bgcolor text-white borderradius-20">
          <div class="card-body p-6">
            <form method="POST" action="/courses/<%= course._id %>?_method=PUT" enctype="multipart/form-data">
            <div class="mb-md-5 mt-md-4 pb-5">
              <h2 class="fw-bold mb-2 text-uppercase text-center">Edit blog</h2>
              <div class="form-outline form-white mb-4">
                <label class="form-label" for="name">Title</label>
                <input type="text" value="<%= course.name %>" id="name" name="name" class="form-control form-control-lg borderradius-20" />
              </div>
              <div class="form-outline form-white mb-4">
                <label class="form-label" for="text">Description</label>
                <textarea type="text" id="description" name="description" class="form-control form-control-lg borderradius-20"><%= course.description %></textarea>
              </div>

              <div class="mb-5 pb-5">
               <label class="form-label">Imge</label>
               <input type="file" class="form-control borderradius-20" name="anh">
              </div>
            <div class="text-center">
              <button class="btn btn-outline-light btn-lg px-5 borderradius-20" type="submit">Save</button>
            </div>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
