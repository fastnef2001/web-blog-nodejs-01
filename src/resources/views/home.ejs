

<div class="p-4 ">
  <div class="row">
    <p><%= message %></p>
    <% courses.forEach(function(course) { %>
      <div class="col-sm-6 col-lg-4 p-4" >
        <div class="card" style="border-radius: 20px;">
            <img src="/../img/<%= course.image %>" class="card-img-top borderradius-20" alt="Photo" style="width: 100%; height: auto;"/>
          <div class="card-body">
              <h5 class="card-title"><%= course.name %></h5>
            <p class="card-text label_title"><%= course.description %></p>
            <a href="/courses/<%= course.slug %>" class="btn btn btn-outline-success borderradius-20" style="float:right;">View blog</a>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
<!-- pagination -->
<div class="row" >
  <!-- hiển thị phân trang nếu có trang -->
  <% if(pages > 0) { %>
  <nav class="mx-auto">
    <ul class="pagination justify-content-center" style="margin-top: 2rem;">
    
      <!-- FIRST ITEM -->  
      <% if(current == 1) { %> 
    <!-- // Nếu thông số http://localhost:3333/news/1/ là 1 thì First sẽ bị disabled -->
          <li class="page-item disabled" >
            <a class="page-link" href="/" style="border-top-left-radius: 20px; border-bottom-left-radius: 20px;">First</a>
          </li>
      <% } else { %>
      <!-- // Nếu thông số http://localhost:3333/news/2/ từ 2 trở lên thì First sẽ bỏ disabled -->
          <li class="page-item">
              <%= i %>
            <a class="page-link colortext blcacktexthover" href="/site/home?page=<%= i %>&q=<%= typeSearch %>" style="border-top-left-radius: 20px; border-bottom-left-radius: 20px;">First</a>
          </li>
      <% } %>
      
      <!-- ITEMS  -->
      <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %> 
<!-- // Toán tử điều kiện 3 ngôi syntax: < điều_kiện ? giá_trị_1 : giá_trị_2 > -->
<!-- // Nếu điều_kiện trả về true, toán tử có giá trị giá_trị_1. Ngược lại toán tử có giá trị giá_trị_2. -->
      <% if(i !== 1) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">...</a>
          </li>
      <% } %>
      <% for(; i <= (Number(current) + 2) && i <= pages; i++) { %>
      <!-- // Sử dụng vòng lặp để lặp qua từng trang và tăng số trang  -->
      <!-- // Trong vòng lặp for có ba biểu thức tùy chọn nên chỉ cần các bạn tách mỗi biểu thức bằng dấu `;` là oke rồi -->
        <% if(i == current) { %>
          <li class="page-item">
            <a class="page-link currentPage blcacktexthover" href="/site/home?page=<%= i %>&q=<%= typeSearch %>">
              <%= i %>
            </a>
          </li>
      <% } else { %>
          <li class="page-item">
            <a class="page-link colortext blcacktexthover" href="/site/home?page=<%= i %>&q=<%= typeSearch %>">
              <%= i %>
            </a>
          </li>
      <% } %>
      <% if (i == Number(current) + 2 && i < pages) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">...</a>
          </li>
      <% } %>
      <% } %>
      
      <!-- LAST ITEM -->
      <% if(current == pages) { %> 
     <!-- // Nếu số current( chỉ số phân trang ) là 6 và tổng số page là 6 thì Last bị disabled -->
          <li class="page-item disabled">
            <a class="page-link" href="#" style="border-top-right-radius: 20px; border-bottom-right-radius: 20px;">
              Last
            </a>
          </li>
      <% } else { %>
      <!-- // Ngược lại, thì Last là trang cuối cùng pages ở đây là 6 đồng nghĩa với Last là trang số 6 -->
          <li class="page-item">
            <a class="page-link colortext blcacktexthover" href="/site/home?page=<%= pages %>&q=<%= typeSearch %>" style="border-top-right-radius: 20px; border-bottom-right-radius: 20px;">
              Last
            </a>
          </li>
      <% } %>
    </ul>
  </nav>
  <% } %>
</div>
</div>




        




